<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= current_user.email %> <span class="panel-title pull-right">(<%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>)</span>
    </h3>

  </div>
</div>

<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
          <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Available User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
              <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>